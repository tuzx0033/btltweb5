@{
    Layout = null;
}

@{
    ViewData["Title"] = "Upload File";
}

<h2>Upload File</h2>

<form asp-action="Upload" asp-controller="FileUpload" method="post" enctype="multipart/form-data">
    <div>
        <label for="UploadedFile">Chọn file:</label>
        <input type="file" id="UploadedFile" name="UploadedFile" />
    </div>
    <button type="submit">Upload</button>
</form>

@if (ViewBag.Message != null)
{
    <p style="color: green;">@ViewBag.Message</p>
}

@if (ViewBag.ImagePath != null)
{
    <div>
        <h3>Hình ảnh vừa upload:</h3>
        <img src="@ViewBag.ImagePath" alt="Uploaded Image" style="max-width: 500px; max-height: 500px;" />
    </div>
}
